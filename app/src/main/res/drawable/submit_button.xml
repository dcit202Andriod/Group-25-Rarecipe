<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Button pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF4081" /> <!-- Set your desired button color when pressed -->
            <corners android:radius="10dp" /> <!-- Set corner radius for the button -->
        </shape>
    </item>

    <!-- Button default state -->
    <item>
        <shape>
            <solid android:color="#FF621870" /> <!-- Set your desired button color -->
            <corners android:radius="10dp" /> <!-- Set corner radius for the button -->
        </shape>
    </item>

</selector>
