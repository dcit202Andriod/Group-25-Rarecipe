<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Text: Popular Category -->
    <TextView
        android:id="@+id/text_popular_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popular_category"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="16dp" />

    <!-- Scrollable Filter Buttons -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_filter_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Filter Buttons will be dynamically added here -->

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Scrollable Recipe List -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_recipe_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Recipe items will be dynamically added here -->

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
